<div class="section">
    <h1>UniformLoader</h1>
    <div class="grid">
        <div class="col-6">
            <div class="uniformLoader">
                <div class="uniformLoader-container">
                    <span>&bull;</span>
                    <span>&bull;</span>
                    <span>&bull;</span>
                </div>
            </div>
        </div>
        <div class="col-6">
            <% block = html_block do %>
<div class="uniformLoader">
    <div class="uniformLoader-container">
        <span>&bull;</span>
        <span>&bull;</span>
        <span>&bull;</span>
    </div>
</div>
            <% end %>
            <%= block %>
        </div>
    </div>
    <div class="grid">
        <div class="col-6">
            <code>.cover</code><br>
            <span style="position:relative; display:inline-block">
                <img src="https://unsplash.it/150/100/?random" style="display:block;" width="150" height="100">
                <div class="uniformLoader -cover">
                    <div class="uniformLoader-container">
                        <span>&bull;</span>
                        <span>&bull;</span>
                        <span>&bull;</span>
                    </div>
                </div>
            </span>
        </div>
        <div class="col-6">
            <% block = html_block do %>
<span style="position:relative; display:inline-block">
    <img src="https://unsplash.it/150/100/?random" style="display:block;">
    <div class="uniformLoader -cover">
        <div class="uniformLoader-container">
            <span>&bull;</span>
            <span>&bull;</span>
            <span>&bull;</span>
        </div>
    </div>
</span>
            <% end %>
            <%= block %>
        </div>
    </div>
    <div class="grid">
        <div class="col-6">
            <code>.cover.light</code><br>
            <span style="position:relative; display:inline-block">
                <img src="https://unsplash.it/150/100/?random" style="display:block;" width="150" height="100">
                <div class="uniformLoader -cover -light">
                    <div class="uniformLoader-container">
                        <span>&bull;</span>
                        <span>&bull;</span>
                        <span>&bull;</span>
                    </div>
                </div>
            </span>
        </div>
        <div class="col-6">
            <% block = html_block do %>
<span style="position:relative; display:inline-block">
    <img src="https://unsplash.it/150/100/?random" style="display:block;">
    <div class="uniformLoader -cover -light">
        <div class="uniformLoader-container">
            <span>&bull;</span>
            <span>&bull;</span>
            <span>&bull;</span>
        </div>
    </div>
</span>
            <% end %>
            <%= block %>
        </div>
    </div>
</div>