<div class="section">
    <h1>Rows</h1>
    <div class="grid-md margin-v grid-nowrap grid-nest">
        <div class="">
            <p>
                Rows are great for table like data that needs to transform into cards to be responsive.
            </p>
            <h4>uniformThumb</h4>
            <p>
                Uses uniformThumb to use any size image to fill the space of the thumbnail.
            </p>
            <h4>uniformRow-body</h4>
            <p>
                Use uniformRow-body for content of row. All child elements are treated as columns
            </p>
        </div>
        <div class="">
            <% block = html_block class: "html" do %>
            <a class="uniformRow" href="#rows">
                <span class="uniformThumb">
                    <img src="https://unsplash.it/400/300/?random">
                </span>
                <div class="uniformRow-body">
                    <span>
                        John Doe
                        <span class="text-subtle block">ABC Designs</span>
                    </span>
                    <span>
                        Garland, TX
                    </span>
                    <span>
                        Texas Ranger Fan
                    </span>
                </div>
            </a>
            <% end %>
            <%= block %>
        </div>
    </div>
    <div class="margin-v">
        <h2>size-md+</h2>
        <% rows = [
            {
                title: "John Doe",
                subtitle: "Fan",
                location: "Garland, TX",
                team: "Texas Rangers",
                logo: "http://mlb.mlb.com/documents/3/0/0/111209300/T_Red_3kf3eqmg.svg"
            },{
                title: "David Pumpkins",
                subtitle: "Lead Cheerer",
                location: "Paris, TX",
                team: "Minnesota Twins",
                logo: "http://mlb.mlb.com/documents/9/8/4/111241984/MIN_header_logo_jafcibrj.svg"
            },{
                title: "Rod Kimble",
                subtitle: "Manager",
                location: "Anchorage, AK",
                team: "Evil Empire",
                logo: "http://mlb.mlb.com/documents/5/7/0/111220570/NYY_header_logo_jnivpoth.svg"
            }
        ] %>
        <% rows.each do |row| %>
            <a class="uniformRow" href="#rows">
                <span class="uniformThumb width-90-px-md">
                    <img src="<%= row[:logo] %>">
                </span>
                <div class="uniformRow-body">
                    <span>
                        <span class="text-bold"><%= row[:title] %></span>
                        <span class="text-subtle block"><%= row[:subtitle] %></span>
                    </span>
                    <span>
                        <%= row[:location] %>
                    </span>
                    <span>
                        <%= row[:team] %>
                    </span>
                </div>
            </a>
        <% end %>
    </div>
    
    <div class="margin-v width-300-px sm-size">
        <h2>size-sm</h2>
        <% rows.each do |row| %>
            <a class="uniformRow" href="#rows">
                <span class="uniformThumb width-90-px-md">
                    <img src="<%= row[:logo] %>">
                </span>
                <div class="uniformRow-body">
                    <span>
                        <span class="text-bold"><%= row[:title] %></span>
                        <span class="text-subtle block"><%= row[:subtitle] %></span>
                    </span>
                    <span>
                        <%= row[:location] %>
                    </span>
                    <span>
                        <%= row[:team] %>
                    </span>
                </div>
            </a>
        <% end %>
    </div>
</div>