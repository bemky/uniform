<% icon = '<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class=":selector"><circle cx="12" cy="12" r="10"></circle><polyline points="8 12 12 16 16 12"></polyline><line x1="12" y1="8" x2="12" y2="16"></line></svg>' %>
<div class="section">
    <h1>SVGs</h1>
</div>
<div class="section">
    <h3>Stroke Color</h3>
    <%= partial :css_rule_table, locals: {
        css: css_rules('uniform/utilities/svg.css'),
        content: icon,
        whitelist: [/stroke.*/],
        blacklist: [/stroke\-(sm|md|lg|2x|3x)$/]
    } %>
</div>

<div class="section">
    <h3>Stroke Width</h3>
    <%= partial :css_rule_table, locals: {
        css: css_rules('uniform/utilities/svg.css'),
        content: icon,
        whitelist: [/stroke\-(sm|md|lg|2x|3x)$/]
    } %>
</div>

<div class="section">
    <h3>Fill Color</h3>
    <%= partial :css_rule_table, locals: {
        css: css_rules('uniform/utilities/svg.css'),
        content: icon,
        whitelist: [/fill/]
    } %>
</div>