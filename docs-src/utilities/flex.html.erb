                <div class="flex margin-*">
                    <div class="bg-green bg-opacity-30 flex-fill">
                        <code>.flex-fill</code> #{(1..20).to_a.join(" ")}
                    </div>
                    <div class="bg-green bg-opacity-30 flex-initial">
                        <code>.flex-initial</code> 1 2 4
                    </div>
                    <div class="bg-green bg-opacity-30 flex-initial">
                        <code>.flex-initial</code>
                    </div>
                </div>
            </div>
            HTML
        } %>
        <%= partial :css_rule_row, locals: {
            selector: 'flex-initial',
            content: <<-HTML
            <div class="width-full overflow-x bg-blue bg-opacity-10 text-xs">
                <div class="flex margin-*">
                    <div class="bg-green bg-opacity-30 flex-initial">
                        <code>.flex-initial</code> #{(1..10).to_a.join(" ")}
                    </div>
                    <div class="bg-green bg-opacity-30 flex-initial">
                        <code>.flex-initial</code> #{(1..10).to_a.join(" ")}
                    </div>
                    <div class="bg-green bg-opacity-30 flex-initial">
                        <code>.flex-initial</code> #{(1..10).to_a.join(" ")}
                    </div>
                </div>
            </div>
            HTML
        } %>
        <%= partial :css_rule_row, locals: {
            selector: 'flex-none',
            content: <<-HTML
            <div class="width-full overflow-x bg-blue bg-opacity-10 text-xs">
                <div class="flex margin-*">
                    <div class="bg-green bg-opacity-30 flex-none">
                        <code>.flex-none</code> #{(1..20).to_a.join(" ")}
                    </div>
                    <div class="bg-green bg-opacity-30 flex-none">
                        <code>.flex-none</code> #{(1..20).to_a.join(" ")}
                    </div>
                    <div class="bg-green bg-opacity-30 flex-none">
                        <code>.flex-none</code> #{(1..20).to_a.join(" ")}
                    </div>
                </div>
            </div>
            HTML
        } %>
    </table>
</div>

<div class="section">
    <h3>Flex Alignment</h3>

    <h5 class="text-gray-60">Content Along Main Axes</h5>
    <table class="uniformTable align-top-*">
        <% %w(start end center between around evenly).each do |modifier| %>
        <%= partial :css_rule_row, locals: {
            selector: 'justify-content-' + modifier,
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs pad-h">
                <div class="flex justify-content-#{modifier} leading-tight-* pad-* bg-green-* bg-opacity-30-* space-h">
                    <div>1</div>
                    <div>2</div>
                    <div>3</div>
                </div>
            </div>
            HTML
        } %>
        <% end %>
    </table>

    <h5 class="text-gray-60">Content Along Cross Axes</h5>
    <table class="uniformTable align-top-*">
        <% %w(start end center between around evenly).each do |modifier| %>
        <%= partial :css_rule_row, locals: {
            selector: 'align-content-' + modifier,
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs">
                <div class="flex flex-wrap align-content-#{modifier} pad-left pad-top-1/2x margin-bottom-1/2x-* margin-right-* leading-tight-* pad-h-* bg-green-* bg-opacity-30-* height-100-px">
                    <div class="width-1/4">1</div>
                    <div class="width-1/4">2</div>
                    <div class="width-1/4">3</div>
                    <div class="width-1/4">4</div>
                    <div class="width-1/4">5</div>
                    <div class="width-1/4">6</div>
                </div>
            </div>
            HTML
        } %>
        <% end %>
    </table>
    
    <h5 class="text-gray-60">Items Along Cross Axes</h5>
    <table class="uniformTable align-top-*">
        <% %w(auto start end center stretch baseline).each do |modifier| %>
        <%= partial :css_rule_row, locals: {
            selector: 'align-' + modifier,
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs pad-h">
                <div class="flex align-#{modifier} leading-tight-* pad-* bg-green-* bg-opacity-30-* space-h">
                    <div>1</div>
                    <div>2<br>2<br>2</div>
                    <div>3<br>3</div>
                </div>
            </div>
            HTML
        } %>
        <% end %>
    </table>
        
</div>

