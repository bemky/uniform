<div class="section">
    <h1>Flex</h1>

    <table class="uniformTable align-top-*">
        <%= partial :css_rule_row, locals: {
            selector: 'flex',
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs pad-h">
                <div class="flex leading-tight-* pad-* bg-green-* bg-opacity-30-* space-h">
                    <div class="">1</div>
                    <div class="">2</div>
                    <div class="">3</div>
                </div>
            </div>
            HTML
        } %>
        <%= partial :css_rule_row, locals: {
            selector: 'flex-nowrap',
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs overflow-hidden">
                <div class="flex flex-nowrap leading-tight-* pad-* bg-green-* bg-opacity-30-* margin-h space-h">
                    <div class="min-width-2/5">1</div>
                    <div class="min-width-2/5">2</div>
                    <div class="min-width-2/5">3</div>
                </div>
            </div>
            HTML
        } %>
        <%= partial :css_rule_row, locals: {
            selector: 'flex-wrap',
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs">
                <div class="flex flex-wrap leading-tight-* pad-* bg-green-* bg-opacity-30-* ">
                    <div class="min-width-2/5 margin">1</div>
                    <div class="min-width-2/5 margin">2</div>
                    <div class="min-width-2/5 margin">3</div>
                </div>
            </div>
            HTML
        } %>
    </table>
</div>
