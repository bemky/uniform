<div class="section">
    <h1>Grid</h1>
    
    
    <table class="uniformTable align-top-*">
        <%= partial :css_rule_row, locals: {
            selector: 'grid',
            content: <<-HTML
            <div class="width-full bg-blue bg-opacity-10 text-xs pad-h">
                <div class="grid gap cols-3 leading-tight-* pad-* bg-green-* bg-opacity-30-*">
                    <div class="">1</div>
                    <div class="">2</div>
                    <div class="">3</div>
                </div>
            </div>
            HTML
        } %>
    </table>
</div>

<div class="section">
    <h1>Templates</h1>
    
    <h3>Columns</h3>
    <%= partial :css_rule_table, locals: {
        css: css_rules('uniform/utilities/layout.css'),
        content: <<-HTML,
        <div class="width-full bg-blue bg-opacity-10 text-xs pad-h">
            <div class="grid gap :selector leading-tight-* pad-* bg-green-* bg-opacity-30-*">
                #{(1..12).to_a.map{|x| "<div>#{x}</div>" }.join("")}
            </div>
        </div>
        HTML
        whitelist: [/cols/]
    } %>
    
    <h3>Rows</h3>
    <%= partial :css_rule_table, locals: {
        css: css_rules('uniform/utilities/layout.css'),
        content: <<-HTML,
        <div class="width-full bg-blue bg-opacity-10 text-xs pad-h">
            <div class="grid grid-flow-col gap :selector leading-tight-* pad-* bg-green-* bg-opacity-30-*">
                #{(1..12).to_a.map{|x| "<div>#{x}</div>" }.join("")}
            </div>
        </div>
        HTML
        whitelist: [/rows/]
    } %>
</div>


