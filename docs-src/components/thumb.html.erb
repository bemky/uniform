            <% end %>
        </div>
    </div>
    
    <% html = capture_html do %>
    <div class="uniformThumb width-100-px aspect-4x3">
        <span>Text</span>
    </div>
    <% end %>
    <h3><code>.uniformThumb</code> With Placeholder Text</h3>
    <div class="flex space-h">
        <div class="width-1/2">
            <%= html %>
        </div>
        <div class="width-1/2">
            <% code 'html' do %>
            <%= html %>
            <% end %>
        </div>
    </div>
    
