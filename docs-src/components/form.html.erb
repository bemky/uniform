                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text">
                        </div>
                    </form>
                <% end %>
                <%= block %>
            </div>
        </div>
    </div>
    
    
    
    <div class="margin-v-2x">
        <h3>uniformCheckbox / uniformRadio <span class="uniformLabel text-xs -yellow-60 text-normal">js required</span></h3>
        <p>Custom color, animation, and icon</p>
        <div class="grid grid-nest">
            <div class="col-6">
                <div class="margin-v">
                    <label for="uniformCheckbox-1"><input type="checkbox" class="uniformCheckbox" id="uniformCheckbox-1"> Option 1</label><br>
                    <label for="uniformCheckbox-2"><input type="checkbox" class="uniformCheckbox" id="uniformCheckbox-2" checked> Option 1</label>
                </div>
                <div class="margin-v text-xl">
                    <label for="uniformCheckbox-3"><input type="checkbox" class="uniformCheckbox" id="uniformCheckbox-3"> Option 1</label><br>
                    <label for="uniformCheckbox-4"><input type="checkbox" class="uniformCheckbox" id="uniformCheckbox-4" checked> Option 1</label>
                </div>
                <div class="margin-v">
                    <label for="uniformCheckbox-5"><input type="checkbox" class="uniformRadio" id="uniformCheckbox-5"> Option 1</label><br>
                    <label for="uniformCheckbox-6"><input type="checkbox" class="uniformRadio" id="uniformCheckbox-6" checked> Option 1</label>
                </div>
                <div class="margin-v text-xl">
                    <label for="uniformCheckbox-7"><input type="checkbox" class="uniformRadio" id="uniformCheckbox-7"> Option 1</label><br>
                    <label for="uniformCheckbox-8"><input type="checkbox" class="uniformRadio"  id="uniformCheckbox-8" checked> Option 1</label>
                </div>
            </div>
            <div class="col-6">
                <% block = html_block do %>
                <label for="uniformCheckbox-1"><input type="checkbox" class="uniformCheckbox" id="uniformCheckbox-1"> Option 1</label>
                <% end %>
                <%= block %>
                <% block = html_block do %>
                    <label for="uniformCheckbox-1"><input type="checkbox" class="uniformRadio" id="uniformCheckbox-2"> Option 1</label>
                <% end %>
                <%= block %>
                <% block = html_block class:"javascript" do %>
                $('.uniformCheckbox').uniformCheckbox();
                $('.uniformRadio').uniformRadio();
                <% end %>
                <%= block %>
            </div>
        </div>
    </div>
    
    
