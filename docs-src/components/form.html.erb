<div class="section">
    <h1>Forms</h1>
    
    <div class="margin-v-2x">
        <h3>uniformInput</h3>
        <div class="grid grid-nest">
            <div class="col-6">
                <p><input type="text" class="uniformInput" /></p>
                <p><input type="text" class="uniformInput text-lg" /></p>
            </div>
            <div class="col-6">
                <% block = html_block class: "html" do %>
                    <input type="text" class="uniformInput" />
                <% end %>
                <%= block %>
                <% block = html_block class: "html" do %>
                    <input type="text" class="uniformInput text-lg" />
                <% end %>
                <%= block %>
            </div>
        </div>
    </div>
    <div class="margin-v-2x">
        <h3>uniformForm</h3>
        <div class="grid grid-nest">
            <div class="col-6">
                <form class="uniformForm">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text">
                    </div>
                    <div class="form-group" data-uniform-error="example error message">
                        <label>Phone</label>
                        <input type="text">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text">
                    </div>
                </form>
            </div>
            <div class="col-6">
                <% block = html_block do %>
                <form class="uniformForm">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text">
                    </div>
                    <div class="form-group" data-uniform-error="example error message">
                        <label>Phone</label>
                        <input type="text">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text">
                    </div>
                </form>
                <% end %>
                <%= block %>
            </div>
        </div>
    </div>
    
    <div class="margin-v-2x">
        <h3>uniformForm -table</h3>
        <div class="grid grid-nest">
            <div class="col-6">
                <form class="uniformForm -table">
                    <div class="form-group">
                        <label>Name</label>
                        <div>
                            <input type="text">
                        </div>
                    </div>
