<div class="section">
    <h1>UniformAlert</h1>
    <div class="grid-md grid-nest">
        
        <div class="col-6-md">
            <div class="uniformAlert">
                <div class="uniformAlert-body">
                    <p>This is a an alert.</p>
                    <p>You can put whatever here.</p>
                </div>
            </div>
        </div>
        <div class="col-6-md margin-bottom">
            <% html_block do %>
            <div class="uniformAlert">
                <div class="uniformAlert-body">
                    <p>This is a an alert.</p>
                    <p>You can put whatever here.</p>
                </div>
            </div>
            <% end %>
        </div>
