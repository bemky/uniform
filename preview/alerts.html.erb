<div class="section">
    <h1>UniformAlert</h1>
    <div class="grid-md nest">
        <% ["", "green", "red", "blue"].each do |color| %>
            <div class="col-6-md">
                <div class="uniformAlert <%= color %>">
                    <p>This is a an alert.</p>
                    <p>You can put whatever here.</p>
                </div>
            </div>
            <div class="col-6-md">
                <% html_block do %>
<div class="uniformAlert <%= color %>">
    <p>This is a an alert.</p>
    <p>You can put whatever here.</p>
</div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>