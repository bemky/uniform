    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/site/favicons/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/site/favicons/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/site/favicons/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon-precomposed" sizes="60x60" href="/site/favicons/apple-touch-icon-60x60.png" />
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="/site/favicons/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon-precomposed" sizes="76x76" href="/site/favicons/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="/site/favicons/apple-touch-icon-152x152.png" />
    <link rel="icon" type="image/png" href="/site/favicons/favicon-196x196.png" sizes="196x196" />
    <link rel="icon" type="image/png" href="/site/favicons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="/site/favicons/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/site/favicons/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="/site/favicons/favicon-128.png" sizes="128x128" />
    <meta name="application-name" content="Uniform"/>
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="/site/favicons/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="/site/favicons/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="/site/favicons/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="/site/favicons/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="/site/favicons/mstile-310x310.png" />
</head>

<body>
<div class="side-nav">
    <div class="pad-2x">
        <a href="/">
        <img src="<%= asset_path("logo.png") %>" class="block width-100-p">
        </a>
    </div>
    <div class="uniformNav uniformNav-vertical">
        <% [
            :helpers,
            :colors,
            :grid,
            :buttons,
            :tables,
            :thumb,
            :cards,
            :rows,
            :form,
            :loaders,
            :nav,
            :labels,
            :alerts,
            [:select, 'js'],
            [:modal, 'js'],
            [:dropdown, 'js'],
            [:tooltip, 'js'],
            [:resizer, 'todo']
        ].each do |page| %>
            <% if page.is_a?(Array)
                tag = page[1]
                page = page[0]
            end %>
            <a href="/site/<%= page %>.html" class="<%= "active" if @current_page == page.to_s %>">
                <%= page.to_s.titleize %>
                <% if tag %>
                    <span class="uniformLabel -yellow-dark text-smaller"><%= tag %></span>
                <% end %>
            </a>
        <% end %>
    </div>
</div>
<div class="main-content overflow-hidden">
    <%= yield %>
</div>  

<script src="/assets/jquery.js" ></script>
<script src="<%= asset_path('uniform.js') %>"></script>
<script src="<%= asset_path('preview.js') %>"></script>
<script src="/assets/highlight.pack.js"></script>
</body>