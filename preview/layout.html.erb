<body>
<div class="side-nav">
    <div class="pad">
        <a href="/">
        <img src="/site/logo.png" class="block">
        </a>
    </div>
    <div class="uniformNav vertical">
        <div class="nav">
            <%  %>
            <% [
                :helpers,
                :colors,
                :grid,
                :buttons,
                [:tables],
                :cards,
                :rows,
                :form,
                :loaders,
                :nav,
                :tabs,
                [:tiles],
                [:labels],
                [:alerts],
                [:dropdown],
                [:modal],
                [:select],
                [:tooltip]
            ].each do |page| %>
                <% if page.is_a?(Array)
                    page = page[0]
                    todo = true
                end %>
                <a href="/site/<%= page %>.html">
                    <%= page.to_s.titleize %>
                    <% if todo %>
                        <span class="uniformLabel yellow">todo</span>
                    <% end %>
                </a>
            <% end %>
        </div>
    </div>
</div>
<div class="main-content overflow-hidden">
    <%= yield %>
</div>  

