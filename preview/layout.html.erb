<body>
<div class="side-nav">
    <div class="pad">
        <a href="/">
        <img src="/site/assets/images/logo.png" class="block">
        </a>
    </div>
    <div class="uniformNav vertical">
        <div class="mobile-nav">
            <button class="uniformButton">-</button>
        </div>
        <div class="non-mobile-nav">
            <div class="nav">
                <%  %>
                <% [
                    :helpers,
                    :colors,
                    :grid,
                    :buttons,
                    :tables,
                    :cards,
                    :rows,
                    :form,
                    :loaders,
                    :nav,
                    :tabs,
                    :tiles,
                    :labels,
                    :alerts,
                    [:select, 'js'],
                    [:modal, 'js'],
                    [:dropdown, 'js'],
                    [:tooltip, 'js']
                ].each do |page| %>
                    <% if page.is_a?(Array)
                        tag = page[1]
                        page = page[0]
                    end %>
                    <a href="/site/<%= page %>.html">
                        <%= page.to_s.titleize %>
                        <% if tag %>
                            <span class="uniformLabel yellow text-small"><%= tag %></span>
                        <% end %>
                    </a>
                <% end %>
            </div>
        </div>
        
    </div>
</div>
<div class="main-content overflow-hidden">
    <%= yield %>
</div>  

